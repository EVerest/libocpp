    {%- else %}
        {%- if property.type == 'ocpp::DateTime' %}
j["{{property.name}}"] = k.{{property.name}}.value().to_rfc3339();
        {%- else %}
j["{{property.name}}"] = k.{{property.name}}.value();
        {%- endif %}
    {%- endif %}
