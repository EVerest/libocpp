{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Json schema for cost and price config",
    "type": "object",
    "required": [
        "CustomDisplayCostAndPrice"
    ],
    "properties": {
        "CustomDisplayCostAndPrice": {
            "type": "boolean",
            "readOnly": true
        },
        "NumberOfDecimals": {
            "type": "integer",
            "readOnly": true
        },
        "DefaultPrice": {
            "type": "object",
            "readOnly": false,
            "minLength": 1,
            "properties": {
                "priceTexts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "priceText": {
                                "type": "string",
                                "minLength": 1
                            },
                            "priceTextOffline": {
                                "type": "string",
                                "minLength": 1
                            },
                            "language": {
                                "type": "string",
                                "minLength": 2
                            }
                        },
                        "required": [
                            "priceText"
                        ]
                    }
                },
                "chargingPrice": {
                    "type": "object",
                    "properties": {
                        "kWhPrice": {
                            "type": "number"
                        },
                        "hourPrice": {
                            "type": "number"
                        },
                        "flatFee": {
                            "type": "number"
                        }
                    }
                }
            }
        },
        "TimeOffset": {
            "type": "string",
            "readOnly": false,
            "minLength": 1,
            "maxLength": 10
        },
        "NextTimeOffsetTransitionDateTime": {
            "type": "string",
            "readOnly": false,
            "minLength": 1,
            "maxLength": 40
        },
        "NextTimeOffsetNextTransition": {
            "type": "string",
            "readOnly": false,
            "minLength": 1,
            "maxLength": 40
        },
        "CustomIdleFeeAfterStop": {
            "type": "boolean",
            "readOnly": false
        },
        "MultiLanguageSupportedLanguages": {
            "type": "string",
            "readOnly": true,
            "minLength": 1
        },
        "CustomMultiLanguageMessages": {
            "type": "boolean",
            "readOnly": true
        },
        "Language": {
            "type": "string",
            "readOnly": false,
            "minLength": 1
        }
    }
}
