{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for ClockCtrlr",
  "type": "object",
  "properties": {
    "DateTime": {
      "characteristics": {
        "supportsMonitoring": true,
        "dataType": "dateTime"
      },
      "attributes": [
        {
          "type": "Actual",
          "mutability": "ReadOnly"
        }
      ],
      "description": "Contains the current date and time",
      "format": "date-time",
      "type": "number"
    },
    "NextTimeOffsetTransitionDateTime": {
      "characteristics": {
        "supportsMonitoring": true,
        "dataType": "dateTime"
      },
      "attributes": [
        {
          "type": "Actual",
          "mutability": "ReadWrite"
        }
      ],
      "description": "Date time of the next time offset transition.",
      "format": "date-time",
      "type": "number"
    },
    "NtpServerUri": {
      "characteristics": {
        "supportsMonitoring": true,
        "dataType": "string"
      },
      "attributes": [
        {
          "type": "Actual",
          "mutability": "ReadWrite"
        }
      ],
      "description": "This contains the address of the NTP server.",
      "type": "string"
    },
    "NtpSource": {
      "characteristics": {
        "supportsMonitoring": true,
        "dataType": "OptionList"
      },
      "attributes": [
        {
          "type": "Actual",
          "mutability": "ReadWrite"
        }
      ],
      "description": "When an NTP client is implemented",
      "type": "string"
    },
    "TimeAdjustmentReportingThreshold": {
      "characteristics": {
        "supportsMonitoring": true,
        "dataType": "integer"
      },
      "attributes": [
        {
          "type": "Actual",
          "mutability": "ReadWrite"
        }
      ],
      "description": "If set",
      "type": "integer"
    },
    "TimeOffset": {
      "characteristics": {
        "supportsMonitoring": true,
        "dataType": "string"
      },
      "attributes": [
        {
          "type": "Actual",
          "mutability": "ReadWrite"
        }
      ],
      "description": "A Time Offset with respect to Coordinated Universal Time (aka UTC or Greenwich Mean Time) in the form of an [RFC3339] time (zone) offset suffix",
      "type": "string"
    },
    "TimeOffsetNextTransition": {
      "characteristics": {
        "supportsMonitoring": true,
        "dataType": "string"
      },
      "attributes": [
        {
          "type": "Actual",
          "mutability": "ReadWrite"
        }
      ],
      "description": "Next local time offset in the format: \"+01:00\", \"-02:00\" etc. New offset that will be set on the next time offset transition as configured via 'NextTimeOffsetTransitionDateTime'. This can be used to manually configure the offset for the start or end of the daylight saving time period.",
      "type": "string"
    },
    "TimeSource": {
      "characteristics": {
        "supportsMonitoring": true,
        "dataType": "SequenceList"
      },
      "attributes": [
        {
          "type": "Actual",
          "mutability": "ReadWrite"
        }
      ],
      "description": "Via this variable",
      "type": "string"
    },
    "TimeZone": {
      "characteristics": {
        "supportsMonitoring": true,
        "dataType": "string"
      },
      "attributes": [
        {
          "type": "Actual",
          "mutability": "ReadWrite"
        }
      ],
      "description": "Configured current local time zone in the format: \"Europe/Oslo\", \"Asia/Singapore\" etc. For display purposes.",
      "type": "string"
    }
  },
  "required": [
    "DateTime",
    "TimeSource"
  ]
}
